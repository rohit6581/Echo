<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".fragments.AboutUsFragment"
    android:background="@drawable/bg"
    android:clickable="true">


    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profilePhoto"
        android:layout_width="150dp"
        android:layout_height="100dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="89dp"
        android:src="@drawable/profile"
        app:civ_border_color="#ffffff"
        app:civ_border_width=".5dp" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profilePhoto"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:text="Rohit Raj"
        android:id="@+id/name"
        android:textColor="#222222"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:id="@+id/email"
        android:layout_centerHorizontal="true"

        android:text=" rohitrajverma86@gmail.com"
        android:textColor="#0e0441"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="144dp"
        android:text="+91-9199515579"
        android:textColor="#0e0441"
        android:textSize="14sp"
        android:layout_below="@+id/email"/>


    <Button
        android:id="@+id/facebook"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"

        android:layout_marginBottom="49dp"
        android:layout_marginStart="38dp"
        android:background="#353a73"
        android:text="Facebook"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/linkedin"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignParentEnd="true"

        android:layout_alignTop="@+id/facebook"
        android:layout_marginEnd="38dp"
        android:background="#353a73"
        android:text="linkedin"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/git"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_alignTop="@+id/facebook"
        android:layout_centerHorizontal="true"
        android:background="#1d1b1b"
        android:text="Github"
        android:textColor="#ffffff" />

</RelativeLayout>